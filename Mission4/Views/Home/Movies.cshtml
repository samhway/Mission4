@{
    ViewData["Title"] = "Movie Form";
}

@model Mission4.Models.MovieResponse

<h1>Input a movie into my database</h1>

<form method="post">
    <label asp-for="Category">Category</label>
    <input asp-for="Category"/><br />
    <label asp-for="Title">Title</label>
    <input asp-for="Title"/><br />
    <label asp-for="Year">Year</label>
    <input asp-for="Year"/><br />
    <label asp-for="Director">Director</label>
    <input asp-for="Director"/><br />
    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating">
        <option value="">--Select rating--</option>
        <option>G</option>
        <option>PG</option>
        <option>PG-13</option>
        <option>R</option>
    </select><br />
    <label asp-for="Edited">Edited</label>
    <input type="checkbox" asp-for="Edited"/><br />
    <label asp-for="LentTo">Lent To</label>
    <input asp-for="LentTo"/><br />
    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes"/><br />
    <input type="submit" value="Submit Movie">

    <div asp-validation-summary="All"></div>
</form>